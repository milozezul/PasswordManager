@using PManagerFrontend.Models.Components
@if (Error.IsOpen)
{
    <div class="absolute top-0 left-0 w-[100vw] h-[100vh] flex flex-row justify-center items-center bg-black/60" @onclick="OnClick">
    <div class="w-150 bg-gray-700">
        <div class="bg-slate-500 text-lg text-white text-center py-2">@Error.Header</div>
        <div class="text-lg px-3 py-3 text-center text-white">@Error.Body</div>
        <div class="flex flex-row justify-center my-2">
            <button class="bg-sky-400 text-white px-5 py-2 h-10 hover:bg-sky-600 text-sm font-light" @onclick="OnClick">OK</button>
        </div>
    </div>
</div>
}


@code {
    [Parameter, EditorRequired]
    public ErrorState Error { get; set; }

    void OnClick()
    {
        ErrorState.CloseError(Error);
    }
}
