<div class="flex flex-row items-center py-1 gap-x-5 hover:bg-neutral-600 pl-30">
    @if (IsUnlocked)
    {
        <img src="icons/unlocked.svg" class="w-3 h-3" />
        <div class="text-white text-xs text-center w-35 bg-white/10 rounded-sm cursor-pointer">@Status</div>
    }
    else
    {
        <img src="icons/locked.svg" class="w-3 h-3" />
        <div class="text-white text-xs text-center w-35 bg-red-500/30 rounded-sm cursor-pointer">@Status</div>
    }    
</div>

@code {
    [Parameter,EditorRequired]
    public bool IsUnlocked { get; set; }

    [Parameter, EditorRequired]
    public string Status { get; set; }
}
