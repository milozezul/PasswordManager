@using PManagerFrontend.Models.Components
@inject IJSRuntime _js

<div class="flex flex-row mt-3 pl-3 gap-x-8">
    <div class="flex flex-row gap-x-3 items-center">
        <img src="icons/link.svg" class="w-4 h-4" />
        <div class="text-sky-300 text-sm">@Folder.Record.Url</div>
        <img src="icons/copy.svg" class="w-4 h-4 cursor-pointer" @onclick="CopyUrlValue" />
    </div>
    <div class="flex flex-row gap-x-3 items-center">
        <img src="icons/username.svg" class="w-4 h-4" />
        <div class="text-white text-sm">@Folder.Record.Username</div>
        <img src="icons/copy.svg" class="w-4 h-4 cursor-pointer" @onclick="CopyUsernameValue" />
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public RecordFolderModel Folder { get; set; }

    async Task CopyUrlValue()
    {
        await _js.InvokeVoidAsync("copyToClipboard", Folder.Record.Url);
    }

    async Task CopyUsernameValue()
    {
        await _js.InvokeVoidAsync("copyToClipboard", Folder.Record.Username);
    }
}
