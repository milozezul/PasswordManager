<div class="flex flex-row items-center">
    <div class="basis-1/10 pl-8">
        @Id
    </div>
    <div class="basis-2/10">
        @if (string.IsNullOrEmpty(Password))
        {
            <input type="text" disabled value="********" class="h-10 py-2 w-50 pl-2 text-gray-100 bg-gray-500 w-full" />
        }
        else
        {
            <input type="text" value="@Password" class="h-10 py-2 w-50 pl-2 text-gray-900 w-full bg-gray-200" />
        }        
    </div>
</div>

@code {
    [Parameter] 
    public int Id { get; set; }
    [Parameter]
    public string Password { get; set; }
}
