@if (IsExpand)
{
    <img src="icons/expand-open.svg" class="w-3 h-3 cursor-pointer" @onclick="OnExpandHandler" />
}
else
{
    <img src="icons/expand-closed.svg" class="w-3 h-3 cursor-pointer" @onclick="OnCollapseHandler" />
}

@code {
    bool IsExpand { get; set; } = false;

    [Parameter, EditorRequired]
    public EventCallback OnExpand { get; set; }
    [Parameter, EditorRequired]
    public EventCallback OnCollapse { get; set; }

    async Task OnExpandHandler()
    {
        IsExpand = false;
        await OnCollapse.InvokeAsync();
    }

    async Task OnCollapseHandler()
    {
        IsExpand = true;
        await OnExpand.InvokeAsync();
    }
}
