@page "/"
@using PManagerFrontend.Components

<div class="flex flex-row justify-center items-center mt-5">
    <div class="w-[80%]">
        @* Tool panel *@
        <div class="flex flex-row justify-between">           
            <div class="flex flex-row gap-x-3">                
                <div>
                    <select class="border-1 border-gray-400 h-10 py-2 w-50 pl-2 text-gray-600">
                        <option value="1">precheckin</option>
                    </select>
                </div>
                <div>
                    <button class="bg-sky-400 text-white px-5 py-2 h-10 hover:bg-sky-600">REFRESH</button>
                </div>
                <div>
                    <button class="bg-sky-400 text-white px-5 py-2 h-10 hover:bg-sky-600">SEARCH</button>
                </div>
            </div>

            <div class="flex flex-row gap-x-3">
                <div>
                    <input type="text" class="border-1 border-gray-400 h-10 py-2 w-50 pl-2 text-gray-600" />
                </div>

                <div>
                    <button class="bg-sky-400 text-white px-5 py-2 h-10 hover:bg-sky-600">ADD GROUP</button>
                </div>
            </div>
            
        </div>

        @* Records list *@
        <div class="flex flex-col mt-5">

            <Record />

        </div>
    </div>
</div>
